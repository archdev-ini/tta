{
    "kind": "collectionType",
    "collectionName": "highlights",
    "info": {
        "singularName": "highlight",
        "pluralName": "highlights",
        "displayName": "Highlights"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "text": {
            "type": "string",
            "required": true
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "speaker",
                "news",
                "recap"
            ],
            "default": "news"
        },
        "link": {
            "type": "string"
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "expiryDate": {
            "type": "datetime"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        }
    }
}